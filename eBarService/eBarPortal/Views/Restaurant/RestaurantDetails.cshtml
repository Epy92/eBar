@using eBarPortal.Models.Restaurant

@{
    ViewData["Title"] = "RestaurantDetails";
}
@{
    Layout = "_Layout";
    var pageMode = ViewData["PageMode"].ToString();
}

@model RestaurantDetailsViewModel

<link href="~/assets/plugins/dropzone/dropzone.css" rel="stylesheet" type="text/css" />

@if (pageMode == "EditMode")
{
    <div class="panel panel-color panel-primary" id="restaurant-edit-container">
        <div class="panel-heading">
            <h3 class="panel-title text-center">Editeaza restaurant</h3>
        </div>
        <div class="panel-body">
            <div class="row form-horizontal">
                <div class="form-group row">
                    <div class="row">
                        <label class="col-sm-4 control-label">Poza de profil restaurant: </label>
                    </div>
                    <div class="row">
                        <div action="#" class="dropzone row col-md-6 col-lg-6 col-lg-offset-3 col-md-offset-3" id="dropzone">
                            <div class="fallback">
                                <input name="file" type="file" />
                            </div>
                        </div>
                        <div class="clearfix row">
                            <button type="button" class="btn btn-pink btn-rounded waves-effect waves-light">Incarca poza</button>
                        </div>
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-4 control-label">Nume restaurant: </label>
                    <div class="col-sm-7">
                        <input type="text" required class="form-control" id="restaurantName" value="@Model.RestaurantTitle">
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-4 control-label">Descriere: </label>
                    <div class="col-sm-7">
                        <textarea id="restaurantDescription" required class="form-control" value="@Model.RestaurantAddress"></textarea>
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-4 control-label">Tip restaurant</label>
                    <div class="col-sm-7">
                        <select class="form-control" id="restaurantTypeSelect">
                            <optgroup label="Tip restaurant">
                                <option value="-1"></option>
                                @foreach (var item in Model.RestaurantTypes)
                                {
                                    if (Model.RestaurantTypeId.ToString() == item.Value)
                                    {
                                        <option selected value="@item.Value">@item.Text</option>
                                    }
                                    else
                                    {
                                        <option value="@item.Value">@item.Text</option>
                                    }
                                }
                            </optgroup>
                        </select>
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-4 control-label">Judet: </label>
                    <div class="col-sm-7">
                        <select class="form-control" id="restaurantCountySelect">
                            <optgroup label="Judet">
                                <option value="-1"></option>
                                @foreach (var item in Model.Counties)
                                {
                                    if (Model.CountyId.ToString() == item.Value)
                                    {
                                        <option selected value="@item.Value">@item.Text</option>
                                    }
                                    else
                                    {
                                        <option value="@item.Value">@item.Text</option>
                                    }
                                }
                            </optgroup>
                        </select>
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-4 control-label">Oras: </label>
                    <div class="col-sm-7">
                        <select class="form-control" id="restaurantCitySelect">
                            <optgroup label="Oras">
                                <option value="-1"></option>
                                @foreach (var item in Model.Cities)
                                {
                                    if (Model.CityId.ToString() == item.Value)
                                    {
                                        <option selected value="@item.Value">@item.Text</option>
                                    }
                                    else
                                    {
                                        <option value="@item.Value">@item.Text</option>
                                    }
                                }
                            </optgroup>
                        </select>
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-4 control-label">Adresa restaurant: </label>
                    <div class="col-sm-7">
                        <input type="text" required class="form-control" id="restaurantAddress" value="@Model.RestaurantAddress">
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-4 control-label">Contact restaurant: </label>
                    <div class="col-sm-7">
                        <input type="text" required class="form-control" id="restaurantContact" value="@Model.RestaurantContact">
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-4 control-label">Program restaurant: </label>
                    <div class="col-sm-7">
                        <input type="text" required class="form-control" id="restaurantProgram" value="@Model.RestaurantProgram">
                    </div>
                </div>
                <div class="form-group row text-center">
                    <button type="button" class="btn btn-danger waves-effect waves-light">Anulare</button>
                    <button type="button" class="btn btn-default waves-effect waves-light">Salveaza</button>
                </div>
            </div>
        </div>
    </div>
}
else
{
    <div class="panel panel-border panel-custom" id="restaurant-view-container">
        <div class="panel-heading">
            <h3 class="panel-title">Detalii restaurant</h3>
        </div>
        <div class="panel-body">
            <div class="row">
                <div class="form-group">
                    <div class="row">
                        <label class="col-sm-4 control-label">Poza de profil restaurant: </label>
                    </div>
                    <div class="row">
                        <img src="@Model.ImageBase64" alt="image" class="img-responsive img-rounded" width="300">
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-4 control-label">Nume restaurant: </label>
                    <div class="col-sm-7">
                        <label class="col-sm-4 control-label">@Model.RestaurantTitle</label>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-4 control-label">Descriere: </label>
                    <div class="col-sm-7">
                        <label class="col-sm-4 control-label">@Model.RestaurantDescription</label>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-4 control-label">Tip restaurant: </label>
                    <div class="col-sm-7">
                        <label class="col-sm-4 control-label">@Model.RestaurantType</label>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-4 control-label">Judet restaurant: </label>
                    <div class="col-sm-7">
                        <label class="col-sm-4 control-label">@Model.RestaurantCounty</label>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-4 control-label">Judet restaurant: </label>
                    <div class="col-sm-7">
                        <label class="col-sm-4 control-label">@Model.RestaurantCity</label>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-4 control-label">Adresa restaurant: </label>
                    <div class="col-sm-7">
                        <label class="col-sm-4 control-label">@Model.RestaurantAddress</label>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-4 control-label">Contact restaurant: </label>
                    <div class="col-sm-7">
                        <label class="col-sm-4 control-label">@Model.RestaurantContact</label>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-4 control-label">Program restaurant: </label>
                    <div class="col-sm-7">
                        <label class="col-sm-4 control-label">@Model.RestaurantProgram</label>
                    </div>
                </div>
                <div class="form-group text-center">
                    <button type="button" class="btn btn-default waves-effect waves-light">Editeaza detalii</button>
                </div>
            </div>
        </div>
    </div>
}

<script src="~/assets/plugins/dropzone/dropzone.js"></script>