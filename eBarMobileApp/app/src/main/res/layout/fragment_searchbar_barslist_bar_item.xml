<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    card_view:cardCornerRadius="5dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="10dp"
    card_view:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="?android:selectableItemBackground"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/fsb_bl_bi_BarImage"
            android:layout_width="match_parent"
            android:layout_height="245dp"
            android:padding="10dp"
            android:scaleType="fitXY"
            android:src="@drawable/ic_camera" />

        <TextView
            android:id="@+id/fsb_bl_bi_BarName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center_horizontal"
            android:textColor="@android:color/black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/fsb_bl_bi_BarType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:fontFamily="sans-serif-condensed"
            android:gravity="center_horizontal"
            android:textColor="@color/darkGrey"
            android:textSize="13sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="3dp"
            android:layout_gravity="center">

            <LinearLayout
                android:layout_width="90dp"
                android:layout_height="1dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:background="@drawable/gradient_grey_background" />

            <TextView
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:id="@+id/fsb_bl_bi_LabelDetails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="Detalii"
                android:textColor="@color/lightGreyTextColor"
                android:textSize="18sp" />

            <LinearLayout
                android:layout_width="90dp"
                android:layout_height="1dp"
                android:background="@drawable/gradient_grey_background" />
        </LinearLayout>


        <TextView
            android:id="@+id/fsb_bl_bi_BarReviews"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:drawablePadding="0dp"
            android:drawableLeft="@drawable/ic_star"
            android:gravity="center"
            android:textColor="@color/darkGrey"
            android:textSize="13sp" />


        <TextView
            android:id="@+id/fsb_bl_bi_BarAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textColor="@color/darkGrey"
            android:textSize="13sp" />
    </LinearLayout>

</android.support.v7.widget.CardView>


